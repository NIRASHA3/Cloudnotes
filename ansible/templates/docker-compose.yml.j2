services:
  backend:
    image: {{ backend_image }}
    container_name: cloudnotes-backend
    ports:
      - "5000:5000"
    env_file:
      - .env.backend
    restart: unless-stopped
    networks:
      - cloudnotes-network
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:5000/health"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 40s

  frontend:
    image: {{ frontend_image }}
    container_name: cloudnotes-frontend
    ports:
      - "5173:5173"
    environment:
      - VITE_BACKEND_URL=http://localhost:5000
    depends_on:
      backend:
        condition: service_healthy
    restart: unless-stopped
    networks:
      - cloudnotes-network

networks:
  cloudnotes-network:
    driver: bridge